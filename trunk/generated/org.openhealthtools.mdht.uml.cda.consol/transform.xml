			<replace file="@{filePath}" token=".model/model/sections/ccd-functionalStatus.uml" value="/model/ccd_Ecore.uml"/>
			<replace file="@{filePath}" token=".model/model/sections/ccd-immunizations.uml" value="/model/ccd_Ecore.uml"/>
			<replace file="@{filePath}" token=".model/model/sections/ccd-medicalEquipment.uml" value="/model/ccd_Ecore.uml"/>
			<replace file="@{filePath}" token=".model/model/sections/ccd-medications.uml" value="/model/ccd_Ecore.uml"/>
			<replace file="@{filePath}" token=".model/model/sections/ccd-payers.uml" value="/model/ccd_Ecore.uml"/>
