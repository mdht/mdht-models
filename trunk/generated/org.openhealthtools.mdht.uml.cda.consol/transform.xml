			<replace file="@{filePath}" token=".model/model/sections/ccd-purpose.uml" value="/model/ccd_Ecore.uml"/>
			<replace file="@{filePath}" token=".model/model/sections/ccd-results.uml" value="/model/ccd_Ecore.uml"/>
			<replace file="@{filePath}" token=".model/model/sections/ccd-socialHistory.uml" value="/model/ccd_Ecore.uml"/>
			<replace file="@{filePath}" token=".model/model/sections/ccd-vitalSigns.uml" value="/model/ccd_Ecore.uml"/>
			<replace file="@{filePath}" token=".model/model/cdt.uml" value="/model/cdt_Ecore.uml"/>
		</sequential>
	</macrodef>

	
	<import file="${cdaPluginPath}/transform-common.xml"/>
</project>
